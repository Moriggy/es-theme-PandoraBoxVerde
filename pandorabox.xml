
<theme>
	<formatVersion>4</formatVersion>

	<view name="system">
	
		<image name="background" extra="true">
			<tile>false</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/bg.png</path>
			<zIndex>1</zIndex>
		</image>

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./art/SubZER0.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<pos>0.125 0.09</pos>
		</helpsystem>

	</view>

	<feature supported="carousel">
    
		<view name="system">
			
			<carousel name="systemcarousel">
				<type>horizontal</type>
				<color>14141400</color>
				<logoScale>1.9</logoScale>
				<logoSize>0.15625 0.097222222222222</logoSize>
				<zIndex>3</zIndex>
			</carousel>
		 
			<text name="systemInfo">
			
				<backgroundColor>FFFFFF00</backgroundColor>
				<color>FFFFFF</color>
				<fontPath>./art/SubZER0.ttf</fontPath>
				<fontSize>0.03</fontSize>
				<zIndex>3</zIndex>
			</text>
        
		</view>
	  
	</feature>
	
	<view name="basic, detailed, video">

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./art/SubZER0.ttf</fontPath>
			<fontSize>0.017</fontSize>
			<pos>0.43 0.92</pos>
		</helpsystem>

	</view>	
	
	<view name="basic">

		<textlist name="gamelist">
			<selectorColor>ffffff80</selectorColor>
			<selectedColor>000000</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>8efef7</secondaryColor>
			<fontPath>./art/Roboto-Medium.ttf</fontPath>	
			<fontSize>0.02</fontSize>
			<pos>0.035 0.195</pos>
			<size>0.29 0.71</size>
			<lineSpacing>1.5</lineSpacing>
			<alignment>left</alignment>
			<scrollSound>./sounds/se_sys_cursor.wav</scrollSound>
			<forceUppercase>0</forceUppercase>
			<zIndex>2</zIndex>
		</textlist>
		
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.57 0.42</pos>
			<maxSize>0.32 0.46</maxSize>
			<zIndex>3</zIndex>
		</image>
	
	</view>

	<view name="detailed">
		
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.57 0.42</pos>
			<maxSize>0.32 0.46</maxSize>
			<zIndex>3</zIndex>
		</image>

	</view>
	
	<feature supported="video">
	
		<view name="video">
		
			<video name="md_video">
				<origin>0.5 0.5</origin>
				<pos>0.57 0.42</pos>
				<maxSize>0.32 0.46</maxSize>			
				<delay>0.9</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				<zIndex>3</zIndex>
			</video>
			
			<image name="md_marquee">
				<pos>0.84 0.58</pos>
				<size>0.20 0.15</size>
				<zIndex>3</zIndex>
			</image>
			
		</view>
		
	</feature>
	
	<view name="detailed, video">

		<textlist name="gamelist">
			<selectorColor>ffffff80</selectorColor>
			<selectedColor>000000</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>8efef7</secondaryColor>
			<fontPath>./art/Roboto-Medium.ttf</fontPath>	
			<fontSize>0.02</fontSize>
			<pos>0.035 0.195</pos>
			<size>0.29 0.71</size>
			<lineSpacing>1.5</lineSpacing>
			<alignment>left</alignment>
			<scrollSound>./sounds/se_sys_cursor.wav</scrollSound>
			<forceUppercase>0</forceUppercase>
			<zIndex>2</zIndex>
		</textlist>

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/Roboto-Medium.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.12 0.02</size>
			<zIndex>3</zIndex>
		</text>

		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite, md_lastplayed">
			<color>8efef7</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/Roboto-Medium.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.12 0.02</size>
			<zIndex>3</zIndex>
		</text>

		<text name="md_lbl_rating">
			<pos>1 1</pos>
		</text>
		
		<rating name="md_rating">
			<pos>0.515 0.056</pos>
			<size>0.028 0.028</size>
			<filledPath>./art/rating_empty.svg</filledPath>
			<unfilledPath>./art/rating_filled.svg</unfilledPath>
			<zIndex>3</zIndex>
		</rating>	
		
		<text name="md_lbl_players">
			<pos>0.75 0.22</pos>
		</text>

		<text name="md_players">
			<pos>0.75 0.24</pos>
		</text>

		<text name="md_lbl_genre">
			<pos>0.75 0.27</pos>
		</text>
				
		<text name="md_genre">
			<pos>0.75 0.29</pos>
			<size>0.24 0.04</size>
		</text>

		<text name="md_lbl_developer">
			<pos>0.75 0.31</pos>
			<size>0.24 0.05</size>
		</text>
		
		<text name="md_developer">
			<pos>0.75 0.33</pos>
			<size>0.24 0.05</size>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.87 0.05</pos>
			<color>8efef7</color>
			<fontPath>./art/Roboto-Medium.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<zIndex>3</zIndex>
		</datetime>

		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_description">
			<pos>0.45 0.72</pos>
			<size>0.45 0.16</size>
			<color>ffffff</color>
			<fontSize>0.022</fontSize>
			<alignment>left</alignment>
			<forceUppercase>1</forceUppercase>
			<zIndex>3</zIndex>
		</text>
		
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
				
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>

		<text name="md_playcount">
			<pos>1 1</pos>
		</text>

	</view>
	
</theme>
